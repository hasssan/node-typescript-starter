{
  "name": "node-typescript-starter",
  "version": "0.1.0",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig-build.json",
    "dev": "TZ=UTC nodemon --exec \"tsx ./src/index.ts\" -e ts",
    "start": "npm run build && TZ=UTC node ./dist/index.js",
    "test": "vitest",
    "prepare": "husky",
    "lint": "eslint . --fix",
    "format": "prettier --write ."
  },
  "author": "A. Hassan (https://hassan.web.id)",
  "license": "MIT",
  "type": "module",
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/node": "^22.15.3",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.41.0",
    "vitest": "^3.1.4"
  },
  "lint-staged": {
    "*.{js,mjs,ts,cjs}": [
      "prettier --write",
      "eslint --fix",
      "prettier --write"
    ],
    "*.md": "prettier --write"
  }
}
